<MainLayout title={title} description="Описание реквизиты">
  <div class="container">
    <h1>{title}</h1>
    <div class="row">
      <div class="col-md-8 mt-3">
        <h2>Карточка компании</h2>
        <DetailsComponent />
      </div>
      <div class="col-md-4 text-end">
        <a href="/opb158/details.pdf" class="btn btn-primary ms-auto" role="button">Скачать PDF</a>
      </div>
    </div>
  </div>
</MainLayout>
